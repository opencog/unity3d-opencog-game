<Addin id          = "UnityCSharp"
       namespace   = "MonoDevelop"
       name        = "OpenCog's C# file templates for Unity"
       author      = "Lake Watkins"
       copyright   = "MIT X11"
       url         = "http://opencog.org/"
       description = "C# file templates for Unity"
       category    = "Unity File Templates"
       version     = "0.1">
	
	<Dependencies>
		<Addin id="Core" version="2.8.2"/>
		<Addin id="Ide" version="2.8.2"/>
		<Addin id="SourceEditor2" version="2.8.2"/>
		<Addin id="Refactoring" version="2.8.2"/>
		<Addin id="Autotools" version="2.8.2"/>
	</Dependencies>	
    	
	<Extension path = "/MonoDevelop/Ide/FileTemplates">
        <FileTemplate id = "UnityCSharpDefaultMonoBehavior" file = "UnityCSharpDefaultMonoBehavior.xft.xml"/>
		<FileTemplate id = "UnityCSharpDefaultMonoBehaviorLite" file = "UnityCSharpDefaultMonoBehaviorLite.xft.xml"/>
 	</Extension>
	
</Addin>
